<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/login_loginBtnLinearID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/login_emailBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login via Email" />

        <Button
            android:id="@+id/login_facebookBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="Login via Facebook" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_emailLinearID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible" >

        <EditText
            android:id="@+id/login_emailEditTxtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email: "
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_passwordEditTxtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Password: "
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <Button
                android:id="@+id/login_loginBtnId"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Login" />

            <Button
                android:id="@+id/login_showOptionBtnId"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Show Login Option" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>